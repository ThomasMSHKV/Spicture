<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/portrait4"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/portret4" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Красавица на стуле"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/portrait5"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/portret5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Африка"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/portrait6"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/portret6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Francoise Hardy"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>


</LinearLayout>






