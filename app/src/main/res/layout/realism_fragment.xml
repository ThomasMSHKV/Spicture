<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">
    <ImageView
        android:id="@+id/realism3"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/realism_3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рандеву"
        android:textStyle="bold"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/realism1"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/realism_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На просторах"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/realism2"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/realism_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Закат на Сене"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>


</LinearLayout>